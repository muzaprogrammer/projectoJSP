<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>SERVPersona</servlet-name>
        <servlet-class>controlador.SERVPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SERVLogin</servlet-name>
        <servlet-class>controlador.SERVLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SERVCerrarSesion</servlet-name>
        <servlet-class>controlador.SERVCerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SERVOrdenes</servlet-name>
        <servlet-class>controlador.SERVOrdenes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SERVArticulos</servlet-name>
        <servlet-class>controlador.SERVArticulos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SERVPersona</servlet-name>
        <url-pattern>/SERVPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SERVLogin</servlet-name>
        <url-pattern>/SERVLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SERVCerrarSesion</servlet-name>
        <url-pattern>/SERVCerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SERVOrdenes</servlet-name>
        <url-pattern>/SERVOrdenes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SERVArticulos</servlet-name>
        <url-pattern>/SERVArticulos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
